<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Pangea.SDK</PackageId>
    <Version>2.0.0</Version>
    <Authors>Pangea Cyber Corporation</Authors>
    <Company>Pangea Cyber Corporation</Company>
    <Description>.Net SDK to access Pangea API services on pangea.cloud</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Pangea, Audit, Log, Logging</PackageTags>
    <RepositoryUrl>https://github.com/pangeacyber/pangea-dotnet</RepositoryUrl>
    <LangVersion>10.0</LangVersion>
    <TargetFrameworks Condition="'$(LibraryFrameworks)'==''">net6.0;netstandard2.0;net461</TargetFrameworks>
    <TargetFrameworks Condition="'$(LibraryFrameworks)'!=''">$(LibraryFrameworks)</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <!-- Build XML documentation for all combinations of target framework x configuration -->
  <PropertyGroup>
    <DocumentationFile>.\docsgen\source\$(AssemblyName).xml
    </DocumentationFile>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Microsoft.Net.Http" Version="2.2.29" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="AuditLog\" />
    <None Remove="Newtonsoft.Json" />
    <None Remove="Exceptions\" />
    <None Remove="Utils\" />
    <None Remove="AuditLog\Models\" />
    <None Include="..\README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="AuditLog\" />
    <Folder Include="Exceptions\" />
    <Folder Include="Utils\" />
    <Folder Include="AuditLog\Models\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BouncyCastle.Cryptography" Version="2.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
</Project>